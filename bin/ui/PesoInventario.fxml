<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PesoController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Título -->
    <Label text="Peso de Inventario por Bodega">
        <font>
            <Font name="Arial Bold" size="22" />
        </font>
    </Label>

    <!-- Tabla -->
    <TableView fx:id="tablaPeso" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colIdBodega" prefWidth="200" text="ID Bodega" />
            <TableColumn fx:id="colPeso" prefWidth="300" text="Peso Total Activo (kg)" />
        </columns>
    </TableView>

    <!-- Botón para volver al menú -->
    <Button onAction="#volverAlMenu" prefHeight="40" prefWidth="200" text="⬅ Volver al Menú" />

</VBox>
