<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResumenController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Resumen General del Inventario">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Label>

    <TableView fx:id="resumenTable" prefHeight="400.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colIdBodega" prefWidth="100.0" text="ID Bodega" />
            <TableColumn fx:id="colLugar" prefWidth="150.0" text="Lugar" />
            <TableColumn fx:id="colCantidad" prefWidth="150.0" text="Cantidad Total" />
            <TableColumn fx:id="colPeso" prefWidth="150.0" text="Peso Total Activo (kg)" />
            <TableColumn fx:id="colFecha" prefWidth="150.0" text="Última Entrega" />
            <TableColumn fx:id="colEstado" prefWidth="150.0" text="Estado Bodega" />
            
        </columns>
    </TableView>

    <Button fx:id="btnVolver" onAction="#volverMenu" prefHeight="40" prefWidth="200" text="Volver al Menú" />
</VBox>
